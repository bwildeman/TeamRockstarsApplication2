      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeamRockStarsIT.FORMS.COMPONENTS.OTHERS"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PAGE_UserInformation" Width="200" Height="200">

    <Grid Width="200" Height="200">
        <Rectangle x:Name="Rectangle_Picture" HorizontalAlignment="Center" Height="140" Margin="32,10,28,0" VerticalAlignment="Top" Width="140" RadiusY="69.5" RadiusX="69.5">
            <Rectangle.Fill>
                <ImageBrush Stretch="Uniform" ImageSource="/TeamRockStarsIT;component/RESCOURCES/UserAvatar3.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Label x:Name="Lbl_Name" Content="User name must be here" Margin="0,155,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Segoe UI Semibold" FontSize="18" MaxWidth="200" HorizontalAlignment="Center"/>
    </Grid>
</Page>
