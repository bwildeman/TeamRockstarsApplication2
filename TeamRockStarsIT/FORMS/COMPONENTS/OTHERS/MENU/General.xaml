        <Separator HorizontalAlignment="Left" Height="100" Margin="9,213,0,0" VerticalAlignment="Top" Width="720" Background="#FFFFE000"/>

        <TextBlock HorizontalAlignment="Left" FontSize="18" Foreground="White" Margin="20,270,0,0" TextWrapping="Wrap" Text="Group Description" VerticalAlignment="Top" Width="155" Height="32" FontFamily="Segoe UI Semibold"/>
