        <Button Content="Upload Image" HorizontalAlignment="Left" Margin="225,138,0,0" VerticalAlignment="Top" Width="125" Height="40" Click="BTN_UploudImage_Click" FontFamily="Segoe UI Semibold" Background="#FFFFE000"/>

